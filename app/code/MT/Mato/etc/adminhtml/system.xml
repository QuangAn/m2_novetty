        <tab id="mtmato" translate="label" sortOrder="180">
            <label>MT Theme</label>
        </tab>
        <section id="mtmato" translate="label" type="text" sortOrder="45" showInDefault="1" showInWebsite="1" showInStore="1">
            <class>separator-top</class>
            <label>Theme Settings</label>
            <tab>mtmato</tab>
            <resource>MT_Mato::config_mato</resource>
            <group id="header" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Header</label>
                <field id="sticky_enable" translate="label comment" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Enable Sticky Header</label>
                    <source_model>Magento\Config\Model\Config\Source\Enabledisable</source_model>
                </field>
                <field id="sticky_logo" translate="label comment" type="text" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Sticky logo</label>
                </field>
                <field id="hide_on_mobile" translate="label comment" type="select" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Hide Cart on Mobile Devices</label>
                    <comment>Empty cart can be hidden on mobile devices (if browser viewport is narrower than 480 pixels).</comment>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="compare" translate="label comment" type="select" sortOrder="40" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Block "Compare" in the Header</label>
                    <source_model>Magento\Config\Model\Config\Source\Enabledisable</source_model>
                </field>
                <field id="layout" translate="label comment" type="select" sortOrder="50" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Header Layout</label>
                    <source_model>MT\Mato\Model\System\Config\Source\Layout\Header\Header</source_model>
                </field>
            </group>
            <group id="menu" translate="label" type="text" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Main Menu</label>
                <field id="effect" translate="label comment" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Menu Animation</label>
                    <source_model>MT\Mato\Model\System\Config\Source\Mainmenu\Menuanimation</source_model>
                </field>
                <field id="home" translate="label comment" type="select" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Home Link in Mainmenu</label>
                    <comment>Empty cart can be hidden on mobile devices (if browser viewport is narrower than 480 pixels).</comment>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="heading_menuleft" translate="label comment" type="select" sortOrder="40" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Menu Left/Right</label>
                    <frontend_model>Magento\Config\Block\System\Config\Form\Field\Heading</frontend_model>
                </field>
                <field id="menuleft_effect" translate="label comment" type="select" sortOrder="50" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Menu Animation</label>
                    <source_model>MT\Mato\Model\System\Config\Source\Mainmenu\Menuleftanimation</source_model>
                </field>
                <field id="heading_menucustom" translate="label comment" type="select" sortOrder="60" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Custom Main Menu</label>
                    <frontend_model>Magento\Config\Block\System\Config\Form\Field\Heading</frontend_model>
                </field>
                <field id="enable_custom" translate="label comment" type="select" sortOrder="70" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Enable Custom Menu</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="static_identifier" translate="label comment" type="textarea" sortOrder="80" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Static block identifier:</label>
                    <comment>
                        <![CDATA[Which static block you want they show on menu (Seperate by Semicolon And you want to put it right added up :right after Identifier). <br/>Example: custom_menu:right]]></comment>
                </field>
                <field id="url_key" translate="label comment" type="textarea" sortOrder="90" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>CMS Page Url Key:</label>
                    <comment>
                        <![CDATA[Which cms page you want they show on menu (Seperate by Semicolon And you want to put it right added up :right after url key). <br/>Example: about-magento-demo-store:right ]]></comment>
                </field>
                <field id="heading_label_category" translate="label comment" type="textarea" sortOrder="100" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Category Labels</label>
                    <frontend_model>Magento\Config\Block\System\Config\Form\Field\Heading</frontend_model>
                </field>

            </group>
            <group id="category" translate="label" type="text" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Category View</label>
                <field id="heading_images" translate="label comment" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Images</label>
                    <frontend_model>Magento\Config\Block\System\Config\Form\Field\Heading</frontend_model>
                </field>
                <field id="aspect_ratio" translate="label comment" type="select" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Keep Image Aspect Ratio</label>
                    <comment>Set "Yes", to keep aspect ratio of the product images (height of the images will be
                        calculated automatically based on width).
                    </comment>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="aspect_ratio_size" translate="label comment" type="select" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Image aspect ratio size</label>
                    <source_model>MT\Mato\Model\System\Config\Source\Category\Grid\Ratioimage</source_model>
                    <comment>If set to "Yes", custom Category Blocks will be displayed in the drop-down box even
                        if the category doesn't have any sub-categories.</comment>
                </field>
                <field id="alt_image" translate="label comment" type="select" sortOrder="40" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Alternative Image</label>
                    <comment>Show alternative image on mouse hover over the main image.</comment>
                    <source_model>Magento\Config\Model\Config\Source\Enabledisable</source_model>
                </field>
                <field id="alt_image_column" translate="label comment" type="select" sortOrder="50" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Select Alt. Image By Column</label>
                    <comment>
                        <![CDATA[Which column of the product image gallery will mark alternative images of your products.]]>
                    </comment>
                    <source_model>MT\Mato\Model\System\Config\Source\Category\Altimagecolumn</source_model>
                </field>
                <field id="alt_image_column_value" translate="label comment" type="text" sortOrder="60" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Alt. Image Column Value</label>
                    <comment>
                        <![CDATA[Specify the value which will mark alternative images of your products. E.g.: if <strong>Select Alt. Image By Column</strong> is set to "Sort Order", specify the number which will mark (in "Sort Order" column of the product image gallery) alternative images, for example: "2".]]>
                    </comment>
                    <depends>
                        <field id="alt_image">1</field>
                    </depends>
                </field>
                <field id="image_width" translate="label comment" type="text" sortOrder="70" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Image Width</label>
                    <comment>Set width image in page products list.</comment>
                </field>
                <field id="image_height" translate="label comment" type="text" sortOrder="80" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Image Height</label>
                    <comment>Set height image in page products list.</comment>
                </field>
            </group>
            <group id="category_grid" translate="label" type="text" sortOrder="40" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Category View (Grid Mode)</label>
                <field id="column_count" translate="label comment" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Number of Columns</label>
                    <comment><![CDATA[Number of products displayed in a single row.]]></comment>
                    <source_model>MT\Mato\Model\System\Config\Source\Category\Grid\Columncount</source_model>
                </field>
                <field id="column_count_768" translate="label comment" type="select" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Number of Columns Below 768px</label>
                    <comment>Number of columns displayed if browser viewport width is between 640 px and 768
                        px.
                    </comment>
                    <source_model>MT\Mato\Model\System\Config\Source\Category\Grid\Columnbelow</source_model>
                </field>
                <field id="column_count_640" translate="label comment" type="select" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Number of Columns Below 640px</label>
                    <source_model>MT\Mato\Model\System\Config\Source\Category\Grid\Columnbelow</source_model>
                    <comment>Number of columns displayed if browser viewport width is between 480px and 640
                        px.
                    </comment>
                </field>
                <field id="column_count_480" translate="label comment" type="select" sortOrder="40" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Number of Columns Below 640px</label>
                    <source_model>MT\Mato\Model\System\Config\Source\Category\Grid\Columnbelow</source_model>
                    <comment>Number of columns displayed if browser viewport width is between 320 px and 480 px.
                        Below that width products are displayed in a single column.
                    </comment>
                </field>
                <field id="equal_height" translate="label comment" type="select" sortOrder="50" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Equal Height of Grid Items (Products)</label>
                    <comment>If enabled, all grid items have the same height and "Add to cart" button is
                        displayed at the bottom edge of the item.
                    </comment>
                    <source_model>Magento\Config\Model\Config\Source\Enabledisable</source_model>
                </field>
